### ADD FOLLOWING SNIPPET TO YOUR HTTPD.CONF

<VirtualHost *:80>
	ServerName gfarms3w
	TimeOut 86400
	RewriteEngine On
	ProxyPass / http://127.0.0.1:@with_router_port@/
	ProxyPassReverse / http://127.0.0.1:@with_router_port@/
</VirtualHost>





### ANOTHER CONFIGURATION: EVERYTHING GOES INTO SAME VIRTUALHOST

	Alias /static/ /home/wsgi/static/

	<Directory /home/wsgi/static>
		Require all granted
	</Directory>

	TimeOut 86400

	RewriteEngine on
	RewriteCond "%{HTTP:Authorization}" "AWS4-HMAC-SHA256"
	RewriteRule ^/(.*) http://127.0.0.1:@with_router_port@/$1 [QSA,P,L]

	ProxyPass /gfarm http://127.0.0.1:@with_wsgi_port@/gfarm

	ProxyPassReverse / http://127.0.0.1:@with_wsgi_port@/
	ProxyPassReverse / http://127.0.0.1:@with_router_port@/
	ProxyPreserveHost on
