Defaults env_keep += "X509_USER_PROXY"

### restrict gfarm_s3-access only to users in one specific group
#Runas_Alias GFARMS3 = %@with_gfarm_s3_group@
### not root
Runas_Alias GFARMS3 = ALL,!root

@with_gfarm_s3_user@ ALL=(GFARMS3) NOPASSWD: @prefix@/bin/gfarm-s3-server
@with_gfarm_s3_user@ ALL=(GFARMS3) NOPASSWD: @with_globus@/bin/grid-proxy-info
@with_gfarm_s3_user@ ALL=(GFARMS3) NOPASSWD: @with_globus@/bin/grid-proxy-init
@with_gfarm_s3_user@ ALL=(GFARMS3) NOPASSWD: @with_myproxy@/bin/myproxy-logon
@with_gfarm_s3_user@ ALL=(GFARMS3) NOPASSWD: @with_gfarm@/bin/gfkey
@with_gfarm_s3_user@ ALL=(GFARMS3) NOPASSWD: @with_gfarm@/bin/gfuser
@with_gfarm_s3_user@ ALL=(GFARMS3) NOPASSWD: @with_gfarm@/bin/gfgroup
@with_gfarm_s3_user@ ALL=(GFARMS3) NOPASSWD: @with_gfarm@/bin/gfls
@with_gfarm_s3_user@ ALL=(GFARMS3) NOPASSWD: @with_gfarm@/bin/gfgetfacl
@with_gfarm_s3_user@ ALL=(GFARMS3) NOPASSWD: @with_gfarm@/bin/gfsetfacl
@with_gfarm_s3_user@ ALL=(GFARMS3) NOPASSWD: @prefix@/bin/gfarm-s3-sharedsecret-password
