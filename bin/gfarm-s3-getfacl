#! /bin/sh

usage="$0 local-username action"

USER=$1
shift
action=$1
shift

case action in
gfls)
	sudo -u "$USER" /usr/local/bin/gfls "$@";;
gfgetacl)
	sudo -u "$USER" /usr/local/bin/gfgetfacl "$@";;
gfsetacl)
	sudo -u "$USER" /usr/local/bin/gfsetfacl "$@";;
gfuser)
	sudo -u "$USER" /usr/local/bin/gfuser "$@";;
gfgroup)
	sudo -u "$USER" /usr/local/bin/gfgroup "$@";;
esac
